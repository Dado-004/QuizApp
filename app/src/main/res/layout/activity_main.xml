<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1. Which countries are in North America?"
            android:textSize="16sp"
            android:textColor="@android:color/black"/>

        <CheckBox
            android:id="@+id/usa_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="U.S.A"
            android:paddingLeft="24dp"
            android:textSize="14sp"/>

        <CheckBox
            android:id="@+id/canada_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Canada"
            android:paddingLeft="24dp"
            android:textSize="14sp"/>

        <CheckBox
            android:id="@+id/mexico_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mexico"
            android:paddingLeft="24dp"
            android:textSize="14sp"/>

        <CheckBox
            android:id="@+id/brazil_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Brazil"
            android:paddingLeft="24dp"
            android:textSize="14sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2. What are the types of Computers?"
            android:textSize="16sp"
            android:textColor="@android:color/black"/>

        <CheckBox
            android:id="@+id/super_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Super Computers"
            android:paddingLeft="24dp"
            android:textSize="14sp"/>

        <CheckBox
            android:id="@+id/digital_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Digital Computers"
            android:paddingLeft="24dp"
            android:textSize="14sp"/>

        <CheckBox
            android:id="@+id/analog_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Analog Computers"
            android:paddingLeft="24dp"
            android:textSize="14sp"/>

        <CheckBox
            android:id="@+id/micro_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Micro Computers"
            android:paddingLeft="24dp"
            android:textSize="14sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="3. Why is the sky blue?"
            android:textSize="16sp"
            android:textColor="@android:color/black"/>

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/radioGroup_one">

        <RadioButton android:id="@+id/radio_empty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Because of empty space"
            android:paddingLeft="24dp"
            android:textSize="14sp"
            android:checked="false"
            android:onClick="onRadioButtonClicked"/>

        <RadioButton android:id="@+id/radio_ocean"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Because it reflects the ocean"
            android:paddingLeft="24dp"
            android:textSize="14sp"
            android:checked="false"
            android:onClick="onRadioButtonClicked"/>

        <RadioButton android:id="@+id/radio_atmosphere"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Because of the atmosphere"
            android:paddingLeft="24dp"
            android:textSize="14sp"
            android:checked="false"
            android:onClick="onRadioButtonClicked"/>

        <RadioButton android:id="@+id/radio_north"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Because of north pole"
            android:paddingLeft="24dp"
            android:textSize="14sp"
            android:checked="false"
            android:onClick="onRadioButtonClicked"/>

        </RadioGroup>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="4. Who composed the four seasons?"
            android:textSize="16sp"
            android:textColor="@android:color/black"/>

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/radioGroup_two">

        <RadioButton android:id="@+id/radio_mozart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mozart"
            android:paddingLeft="24dp"
            android:textSize="14sp"
            android:checked="false"
            android:onClick="onRadioButtonClicked"/>

        <RadioButton android:id="@+id/radio_bach"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bach"
            android:paddingLeft="24dp"
            android:textSize="14sp"
            android:checked="false"
            android:onClick="onRadioButtonClicked"/>

        <RadioButton android:id="@+id/radio_beethoven"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Beethoven"
            android:paddingLeft="24dp"
            android:textSize="14sp"
            android:checked="false"
            android:onClick="onRadioButtonClicked"/>

        <RadioButton android:id="@+id/radio_vivaldi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vivaldi"
            android:paddingLeft="24dp"
            android:textSize="14sp"
            android:checked="false"
            android:onClick="onRadioButtonClicked"/>

        </RadioGroup>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="5. What is the capital city of India?"
            android:textSize="16sp"
            android:textColor="@android:color/black"/>

        <EditText
            android:id="@+id/answer_field"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:hint="Answer"
            android:inputType="textCapWords" />

        <Button
            android:id="@+id/submit_button"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Submit"
            android:onClick="submitResult"
            android:layout_marginBottom="35sp"/>

    </LinearLayout>


</ScrollView>